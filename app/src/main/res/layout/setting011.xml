<!--                android:id="@+id/mode2"-->
<!--                android:text="双手"-->
<!--                android:textSize="25sp"-->
<!--                android:textColor="#5bd5a4"-->
<!--                android:drawableRight="@mipmap/fish2">-->

<!--            </RadioButton>-->

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="mode3"
                android:id="@+id/mode3"
                android:text="左手"
                android:textSize="25sp"
                android:textColor="#5bd5a4">

            </RadioButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="触屏操作:"
                android:textSize="26sp"
                android:textColor="#5bd5a4">

            </TextView>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="mode2"
                android:id="@+id/mode2"
                android:text="选择"
                android:textSize="25sp"
                android:textColor="#5bd5a4">

            </RadioButton>

        </RadioGroup>

    </LinearLayout>

